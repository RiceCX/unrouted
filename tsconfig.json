{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "unrouted": ["./packages/unrouted/src/index.ts"],
      "@unrouted/core": ["./packages/core/src/index.ts"],
      "@unrouted/test-kit": ["./packages/test-kit/src/index.ts"],
      "@unrouted/preset-unrouted": ["./packages/preset-unrouted/src/index.ts"],
    }
  },
  "include": [
    "routes.d.ts",
    "*.d.ts",
    "**/*.d.ts",
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
